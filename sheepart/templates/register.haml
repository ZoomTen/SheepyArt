-extends 'base.haml'

-block contents
  .main-heading
    %h2 << Register for {{site_name}}
  %main#register
    %form(action="/register", method="post")
      {{ form.csrf_token }}
      %fieldset
        %legend << User Details
        {{ form.username.label }}
        {{ form.username }}

        {{ form.dispname.label }}
        {{ form.dispname }}

        {{ form.password.label }}
        {{ form.password }}

        {{ form.confirm_password.label }}
        {{ form.confirm_password }}

        {{ form.email.label }}
        {{ form.email }}

        {{ form.confirm_email.label }}
        {{ form.confirm_email }}

      %fieldset
        %legend << Personal Details
        {{ form.gender.label }}
        {{ form.gender }}

        {{ form.dob.label }}
        {{ form.dob }}

        {{ form.country.label }}
        {{ form.country }}

      %fieldset
        {{ form.agree_tos.label }}
        {{ form.agree_tos }}

      {{ form.submit }}
