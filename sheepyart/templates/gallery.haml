-extends '_userheading.haml'
-block contents
  -if username
    %main#gallerypage
      .thumbs-container
        -for entry in gallery_snips
          .thumb-holder
            .thumb-image
              %a(href="{{ entry['link'] }}")
                %img(height="150" src="{{ entry['thumb'] }}")
            .thumb-text
              %span.title
                %a(href="{{ entry['link'] }}") << {{ entry['title'] }}
              %span.cat
                in
                %a(href="{{ entry['catlink'] }}") << {{ entry['catname'] }}
      .pagination
        -if prevpage
          %a.prev(href='{{ prevpage }}') << Previous Page
        -if nextpage
          %a.next(href='{{ nextpage }}') << Next Page

  -else
    .main-heading
      %h2 << User not found
    %main#userpage
      %p
        The user you're looking for cannot be found. Sorry!
